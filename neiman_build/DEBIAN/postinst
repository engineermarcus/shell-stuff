#!/data/data/com.termux/files/usr/bin/sh
echo "ðŸ”§ Applying Termux-specific build fixes..."
# Fix for node-gyp on Android
mkdir -p ~/.gyp
echo "{'variables':{'android_ndk_path':''}}" > ~/.gyp/include.gypi

echo "ðŸ“¦ Installing NPM dependencies (this will take a few minutes)..."
cd /data/data/com.termux/files/usr/share/neiman
npm install --build-from-source

echo "âœ… Success! You can now start the app by typing: neiman"
